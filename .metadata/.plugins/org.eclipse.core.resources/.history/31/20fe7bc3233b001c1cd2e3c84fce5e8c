<!-- Page specific script -->
<script>
 
	$(function() {
		//Initialize Select2 Elements
		$('.select2').select2()

		//Initialize Select2 Elements
		$('.select2bs4').select2({
			theme : 'bootstrap4'
		})

		//Bootstrap Duallistbox
		$('.duallistbox').bootstrapDualListbox()

		$("input[data-bootstrap-switch]").each(function() {
			$(this).bootstrapSwitch('state', $(this).prop('checked'));
		})
		
		$('#brandCard .overlay').hide();

	})
	
	//per green network possono controllare pod o cf
	function selectChange() {
		var brand = $('#selectBrand').val().toLowerCase();
		$('#inputCf').removeClass().addClass("form-control");
		$('#inputGroup').removeClass().addClass("form-control");
		
		if(brand == 'green network') {
			$('#divGroup').show();
			$('#inputCf').hide();
			$('#inputGroup').val($('#inputCf').val());
		}
		else {
			$('#divGroup').hide();
			$('#inputCf').show();
			$('#labelText').text('Codice Fiscale');
			$('#inputGroup').attr('placeholder','Codice Fiscale');
		}
	}
	
	$('#itemCf').click(function(){
		$('#inputCf').removeClass().addClass("form-control");
		$('#inputGroup').removeClass().addClass("form-control");
		$('#labelText').text('Codice Fiscale');
		$('#inputGroup').attr('placeholder','Codice Fiscale');
		$('#inputGroup').val($('#inputCf').val());
		$('#spanGroup').text('codice fiscale');
	});
	
	$('#itemPod').click(function(){
		$('#inputCf').removeClass().addClass("form-control");
		$('#inputGroup').removeClass().addClass("form-control");
		$('#labelText').text('POD');
		$('#inputGroup').attr('placeholder','POD');
		$('#inputGroup').val('');
		$('#spanGroup').text('POD');
	});
	
	function showAlert(color, title, subtitle, esito) {
		$(document).Toasts('create', {
	        class: 'bg-' + color,
	        title: title,
	        subtitle: subtitle,
	        body: 'L\'interrogazione ha dato esito ' + esito + '.'
	      })
	}
	
	$('#inputCf').keyup(function() {
		$('#inputCf').removeClass().addClass("form-control");
	});
	$('#inputGroup').keyup(function() {
		$('#inputGroup').removeClass().addClass("form-control");
	});

	// BRCLGU45R24G337E commercialetua.enerp: con questo CF dovrebbe restituire Errore
	// CPPLGU94T23F839J
	function checkCf() {
		//const regTel = /^(1\s|1|)?((\(\d{3}\))|\d{3})(\-|\s)?(\d{3})(\-|\s)?(\d{4})$/;
	    //const regMail = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
	    const regCf = /^[a-zA-Z]{6}[0-9]{2}[a-zA-Z][0-9]{2}[a-zA-Z][0-9]{3}[a-zA-Z]$/;	//formato Codice Fiscale
	    const regPod = /^(it|IT)[0-9]{3}[a-zA-Z][0-9]{8,9}$/;
	    
	    var brand = $('#selectBrand').val().toLowerCase();
	    var label = $('#labelText').text().toLowerCase();
	    var subtitle = $('#selectBrand').val().toUpperCase();
	    var data = '';
	    var inputText = '';
	    var url = 'uffici/';
	    
	    if(brand == 'green network') {
	    	inputText = $('#inputGroup').val();
	    	url += 'greenNetworkCheck';
	    	if(label == 'pod') {
	    		url += 'Pod';
	    		data =  { pod: inputText };
	    		var validPod = regPod.test(String(inputText).toLowerCase()) ? "is-valid" : "is-invalid";
	    	    $('#inputGroup').removeClass().addClass("form-control "+validPod);
	    	}
	    	else {
	    		url += 'CF';
	    		data =  { cf: inputText };
	    		var validCf = regCf.test(String(inputText).toLowerCase()) ? "is-valid" : "is-invalid";
	    	    $('#inputGroup').removeClass().addClass("form-control "+validCf);
	    	}
	    }
	    else {
	    	inputText = $('#inputCf').val();
	    	url += 'blacklist';
	    	data =  { cf: inputText, blacklistUrl: $('#selectBrand').val().toUpperCase() };
	    	var validCf = regCf.test(String(inputText).toLowerCase()) ? "is-valid" : "is-invalid";
	 		$('#inputCf').removeClass().addClass("form-control "+validCf);
	    }

		if(validPod == 'is-valid' || validCf == "is-valid") {
			$.ajax({
				url : url,
				type : "GET",
				data: data,
				beforeSend : function(f) {
					$('#brandCard .overlay').show();
				},
				complete: function(f) {
					$('#brandCard .overlay').hide();
				},
				statusCode : {
					500 : function(xhr) {
						alert("Errore 500");
						console.log(xhr);
					}
				},
				success : function(response) {
					if(response.esito = 'SUCCESS')
						showAlert('success', inputText, subtitle, 'positivo');
					else if(response.esito = 'SUCCESS')
						showAlert('danger', inputText, subtitle, 'negativo');
				},
				error : function(jqXHR, textStatus, errorThrown) {
					console.log(textStatus + " " + errorThrown);
				}
			});
		}
	}
</script>
</body>
</html>
